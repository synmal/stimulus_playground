<div class="container" data-controller="comment">
  <%= content_tag 'h1', @post.title %>
  <%= content_tag 'div', class: 'card' do %>
    <%= content_tag 'div', class: 'card-body' do %>
      <%= content_tag 'p', @post.content %>
      <%= content_tag 'div', data: {target: 'comment.container'} do %>
        <%= link_to 'Add Comment', new_post_comment_path(@post), class: 'btn btn-primary', id: 'new-comment', remote: true, data: {action: 'ajax:success->comment#newComment', target: 'comment.newButton'} %>
      <% end %>
    <% end %>
  <% end %>
  <%= content_tag 'div', id: 'comment-container' do %>
    <%= content_tag 'h2', 'Comments', class: 'mt-3' %>
    <%= content_tag 'div', data: {target: 'comment.commentList'} do %>
      <% @comments.each do |comment| %>
        <%= content_tag 'p', comment.body %>
      <% end %>
    <% end %>
  <% end %>
</div>